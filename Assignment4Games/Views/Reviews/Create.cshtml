@model Assignment4Games.Models.Review

@{
    ViewData["Title"] = "Create";
}
<link href="~/css/site.css" rel="stylesheet" />
<h3 id="h3">Create</h3>

<h4 id="h4">Review</h4>
<hr />
<div id="form">
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label">Please enter your First Name</label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label">Your experience with Presto</label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input id="button" type="submit" value="Create" class="btn btn-default" />
            </div>
            <div class="form-group" style="visibility:hidden">
                <label asp-for="GameId" class="control-label"></label>
                <input asp-for="GameId" class="form-control" value="@ViewData["GameId"]" />
                <span asp-validation-for="GameId" class="text-danger"></span>

            </div>

        </form>
    </div>
    </div>
</div>

<div>
    <button id="h2"><a asp-action="Index">All Reviews</a></button>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
