@model IEnumerable<Assignment4Games.Models.Game>

@{
    ViewData["Title"] = "Games";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/site.css" rel="stylesheet" />

<h4 id="h4">GAMES</h4>

<div id="form">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.GameName)
                </th>
                @*<th>
                        @Html.DisplayNameFor(model => model.Rating)
                    </th>*@
                @*<th>
                        @Html.DisplayNameFor(model => model.Genre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Developer)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Platform)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Languages)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>*@
                @*<th>
                        @Html.DisplayNameFor(model => model.Rating)
                    </th>*@
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.GameId">
                            @Html.DisplayFor(modelItem => item.GameName)
                        </a>
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.Rating)
                        </td>*@
                    @*<td>
                            @Html.DisplayFor(modelItem => item.Genre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Developer)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Platform)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Languages)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Rating)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>*@
                    @if (User.IsInRole("Admin"))
                    {
                        <td>
                            <a id="button" class="btn btn-primary" asp-action="Edit" asp-route-id="@item.GameId">Edit</a>
                            <a id="button" class="btn btn-primary" asp-action="Delete" asp-route-id="@item.GameId">Delete</a>
                        </td>
                    }

                </tr>
            }
        </tbody>
    </table>
</div>
